@using ProjectFitness.Domain
@model ProjectFitness.Domain.Exercise

@{
    ViewBag.Title = "Exercise detail";
    Layout = "_Layout";
}

<h2>Exercise Details</h2>

<div class="row mt-3">
    <div class="col-3">Id</div>
    <div id="exerciseId" class="col-9">@Model.Id</div>
</div>

<div class="row mt-3">
    <div class="col-3">Name</div>
    <div class="col-9">@Model.Name</div>
</div>

<div class="row mt-3">
    <div class="col-3">Weight</div>
     @{
            if (@Model.Weight == null)
            {
                <div class="col-9">NVT</div>    
            } 
            else 
            {
                <div class="col-9">@Model.Weight</div>
            }
     }
</div>

<div class="row mt-3">
    <div class="col-3">Bodypart</div>
    <div class="col-9">@Model.BodyPart</div>
</div>

<h2>Members</h2>
<table class="table">
    <thead>
    <tr>
        <th>Id</th><th>Name</th><th>Bodyweight</th>
    </tr>
    </thead>
    <tbody id="tableBody">

    </tbody>
</table>

<h2>Add member to exercise</h2>
<form>
    <div class="row mt-3">
        <div class="col-3">Member</div>
        <div class="col-9">
            <select id="memberSelect">

            </select>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-3">
            <label for="reps">Reps</label>
        </div>
        <div class="col-9">
            <input id="reps" type="number"/>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-3">
            <label for="sets">Sets</label>
        </div>
        <div class="col-9">
            <input id="sets" type="number"/>
        </div>
    </div>
    <button id="addMemberToExercise" class="btn btn-primary" type="button">Add member</button>
</form>

@section Scripts
{
    <script src="/js/exercise/details.js" defer></script>
}